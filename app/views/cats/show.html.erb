<h1> <%= @cat.name %> </h1>

<table>
  <tr>
    <td> Sex :  </td>
    <td> <%= @cat.sex == "M" ? "Male" : "Female" %> </td>
  </tr>
  <tr>
    <td> Color :  </td>
    <td> <%= @cat.color %> </td>
  </tr>
  <tr>
    <td> Birth date :  </td>
    <td> <%= @cat.birth_date %> </td>
  </tr>
  <tr>
    <td> Description :  </td>
    <td> <%= @cat.description %> </td>
  </tr>
</table>

<ul>
  <% CatRentalRequest.order(:start_date).where(:cat_id == @cat.id).each do |request| %>
    <li>Start Date: <%= request.start_date %>, End Date: <%= request.end_date %></li>
   <% end %>
</ul>
